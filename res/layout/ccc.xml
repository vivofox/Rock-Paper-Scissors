<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/back1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="52dp" >

            <TextView
                android:id="@+id/TextViewHostUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hostUserName :" />

            <TextView
                android:id="@+id/TextViewHostUserName_blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewUsericon"
            android:layout_width="80dp"
            android:layout_height="78dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/user_icon2" />



    </RelativeLayout>
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextViewGameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="game id :" />

            <TextView
                android:id="@+id/TextViewGameId_Blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextViewGameTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="game time stamp :" />

            <TextView
                android:id="@+id/TextViewGameTimeStamp_Blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextViewGustUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gustUserName :" />

            <TextView
                android:id="@+id/TextViewGustUserName_blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextViewHostHand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hostHand :" />

            <TextView
                android:id="@+id/TextViewHostHand_blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextViewGustHand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gustHand :" />

            <TextView
                android:id="@+id/TextViewGustHand_blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextViewUserNameWon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userNameWon :" />

            <TextView
                android:id="@+id/TextViewUserNameWon_blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextViewUserNameLose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userNameLose :" />

            <TextView
                android:id="@+id/TextViewUserNameLose_blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextViewGameResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gameResult :" />

            <TextView
                android:id="@+id/TextViewGameResult_blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>